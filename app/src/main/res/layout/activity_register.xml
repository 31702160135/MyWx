<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.Register">
    -<RelativeLayout android:layout_centerInParent="true" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">


    -<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:id="@+id/ll_title">

    <!--返回-->


    <ImageView android:layout_height="35sp" android:layout_width="35sp" android:layout_margin="8sp" android:src="@drawable/exit"/>

    <TextView android:layout_height="50sp" android:layout_width="match_parent" android:layout_marginTop="70sp" android:layout_marginLeft="-20sp" android:textColor="#000000" android:textSize="30sp" android:text="账号注册"/>

</LinearLayout>


    -<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:id="@+id/ll" android:layout_marginTop="50sp" android:layout_marginLeft="15sp" android:layout_marginRight="15sp" android:layout_below="@id/ll_title">

    <!--昵称-->



    -<RelativeLayout android:layout_height="match_parent" android:layout_width="wrap_content">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tv_name" android:layout_marginTop="10sp" android:textColor="#000000" android:textSize="21sp" android:text="昵称："/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/et_name" android:textSize="21sp" android:textColorHint="#95A1AA" android:hint="例如：张三" android:layout_toRightOf="@id/tv_name"/>

</RelativeLayout>

    <!--账号-->



    -<RelativeLayout android:layout_height="match_parent" android:layout_width="wrap_content">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tv_username" android:layout_marginTop="10sp" android:textColor="#000000" android:textSize="21sp" android:text="账号："/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/et_username" android:textSize="21sp" android:textColorHint="#95A1AA" android:hint="请输入账号" android:layout_toRightOf="@id/tv_username"/>

</RelativeLayout>

    <!--密码-->



    -<RelativeLayout android:layout_height="match_parent" android:layout_width="wrap_content">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tv_password" android:layout_marginTop="10sp" android:textColor="#000000" android:textSize="21sp" android:text="密码："/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/et_password" android:textSize="21sp" android:textColorHint="#95A1AA" android:hint="请输入密码" android:layout_toRightOf="@id/tv_password"/>

</RelativeLayout>

</LinearLayout>

    <!--注册按钮-->


    <Button android:layout_height="60sp" android:layout_width="260sp" android:id="@+id/btn" android:layout_marginTop="30sp" android:textColor="#FFF" android:textSize="23sp" android:text="注册" android:layout_below="@id/ll" android:background="#4fcaff" android:layout_centerHorizontal="true"/>

</RelativeLayout>
</android.support.constraint.ConstraintLayout>