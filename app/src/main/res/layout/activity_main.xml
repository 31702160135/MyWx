<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <RelativeLayout android:layout_centerInParent="true" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout android:layout_height="30sp" android:layout_width="match_parent" android:background="#4fcaff" android:orientation="horizontal" android:id="@+id/rl_title">

    <ImageView android:layout_height="40sp" android:layout_width="40sp" android:id="@+id/iv_ret" android:layout_margin="0sp" android:src="@drawable/ret"/>

    <TextView android:layout_centerInParent="true" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textStyle="bold" android:text="聊天室" android:textColor="#fff" android:textSize="13sp"/>

    <ImageView android:layout_height="40sp" android:layout_width="40sp" android:id="@+id/iv_more" android:layout_margin="5sp" android:src="@drawable/more" android:layout_alignParentRight="true"/>

</RelativeLayout>

    <!--聊天-->


    <ListView android:layout_height="match_parent" android:layout_width="match_parent" android:layout_margin="10sp" android:layout_above="@id/rl_botton" android:layout_below="@id/rl_title"> </ListView>


    <RelativeLayout android:layout_height="45sp" android:layout_width="match_parent" android:background="#eae7e7" android:id="@+id/rl_botton" android:layout_alignParentBottom="true">


    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="horizontal" android:background="#fff">

    <EditText android:layout_height="match_parent" android:layout_width="0dp"  android:id="@+id/et_text" android:paddingLeft="15sp" android:inputType="phone" android:layout_marginLeft="10sp" android:layout_marginBottom="0sp" android:layout_marginTop="7sp" android:layout_weight="2"/>

    <Button android:layout_height="match_parent" android:layout_width="0dp" android:background="#4fcaff" android:textColor="#fff" android:text="发送" android:textSize="15sp" android:layout_alignParentRight="true" android:layout_marginLeft="10sp" android:layout_marginBottom="7sp" android:layout_marginTop="7sp" android:layout_weight="0.5" android:layout_marginRight="10sp"/>

</LinearLayout>

</RelativeLayout>

</RelativeLayout>
</android.support.constraint.ConstraintLayout>