<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.UserList">
    <RelativeLayout android:layout_centerInParent="true" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">


        <RelativeLayout android:layout_height="30sp" android:layout_width="match_parent" android:background="#4fcaff" android:orientation="horizontal" android:id="@+id/rl_title">

            <ImageView android:layout_height="40sp" android:layout_width="40sp" android:id="@+id/iv_ret" android:layout_margin="0sp" android:src="@drawable/ret"/>

            <TextView android:layout_centerInParent="true" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textStyle="bold" android:text="成员" android:textColor="#fff" android:textSize="13sp"/>

        </RelativeLayout>

        <!--聊天-->


        <ListView android:layout_height="match_parent" android:layout_width="match_parent" android:layout_margin="10sp" android:layout_above="@id/rl_botton" android:layout_below="@id/rl_title"> </ListView>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>